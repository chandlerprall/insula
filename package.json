{
  "name": "insula",
  "version": "2.0.1",
  "main": "build/insula.js",
  "scripts": {
    "build": "npm run lint && npm run test && rollup -c",
    "lint": "eslint .",
    "test": "jest",
    "test-watch": "jest --watchAll"
  },
  "author": "Chandler Prall <chandler.prall@gmail.com>",
  "license": "MIT",
  "jest": {
    "collectCoverage": true,
    "notify": true,
    "transform": {
      "^((?!node_modules).)+?\\.js$": "babel-jest"
    },
    "testRegex": "^((?!node_modules).)+?\\.jest\\.js$",
    "resetModules": true,
    "cacheDirectory": "<rootDir>/.jestcache"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "globals": {
      "process": false
    },
    "rules": {
      "array-bracket-spacing": [
        "warn",
        "never"
      ],
      "array-callback-return": "error",
      "arrow-body-style": "error",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "arrow-spacing": "error",
      "block-spacing": [
        "warn",
        "never"
      ],
      "brace-style": [
        "warn",
        "1tbs"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "comma-spacing": "warn",
      "complexity": [
        "error",
        5
      ],
      "consistent-return": "error",
      "curly": [
        "warn",
        "all"
      ],
      "default-case": "error",
      "dot-location": [
        "warn",
        "property"
      ],
      "dot-notation": "warn",
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "never"
        }
      ],
      "func-call-spacing": "warn",
      "func-name-matching": "warn",
      "func-names": [
        "warn",
        "as-needed"
      ],
      "guard-for-in": "error",
      "id-blacklist": [
        "warn",
        "crap",
        "shit",
        "fuck",
        "damn",
        "butter"
      ],
      "indent": [
        "error",
        4
      ],
      "jsx-quotes": "error",
      "key-spacing": "warn",
      "keyword-spacing": "warn",
      "max-depth": [
        "warn",
        3
      ],
      "max-nested-callbacks": [
        "warn",
        2
      ],
      "max-params": [
        "error",
        3
      ],
      "max-statements": [
        "warn",
        20
      ],
      "max-statements-per-line": [
        "warn"
      ],
      "no-alert": "error",
      "no-bitwise": "error",
      "no-caller": "error",
      "no-duplicate-imports": "warn",
      "no-eval": "error",
      "no-extra-bind": "warn",
      "no-extra-parens": [
        "error",
        "all",
        {
          "ignoreJSX": "all"
        }
      ],
      "no-implied-eval": "error",
      "no-lone-blocks": "error",
      "no-lonely-if": "warn",
      "no-loop-func": "error",
      "no-mixed-operators": "error",
      "no-multi-spaces": "warn",
      "no-nested-ternary": "error",
      "no-param-reassign": "warn",
      "no-template-curly-in-string": "error",
      "no-trailing-spaces": [
        "warn",
        {
          "skipBlankLines": true
        }
      ],
      "no-throw-literal": "warn",
      "no-unneeded-ternary": "error",
      "no-use-before-define": [
        "warn",
        {
          "functions": false,
          "classes": true
        }
      ],
      "no-useless-escape": "error",
      "no-useless-return": "warn",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "todo",
            "fix",
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "no-whitespace-before-property": "warn",
      "object-curly-newline": "warn",
      "object-curly-spacing": "warn",
      "padded-blocks": [
        "warn",
        "never"
      ],
      "quote-props": [
        "warn",
        "as-needed"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "radix": "error",
      "semi": [
        "error",
        "always"
      ],
      "semi-spacing": "warn",
      "space-before-blocks": [
        "warn",
        "always"
      ],
      "space-before-function-paren": [
        "warn",
        "never"
      ],
      "space-in-parens": [
        "warn",
        "never"
      ],
      "space-infix-ops": "warn"
    }
  },
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "eslint": "^3.19.0",
    "jest": "^19.0.2",
    "next-tick": "^1.0.0",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0"
  }
}